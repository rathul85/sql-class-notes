select * from  public."customers"
--where clause
--where/having/case when
select
full_name,
email,
city
from public."customers"
where city='Dhaka'

  select
full_name,
country
from public."customers"
where status='active'

--null
-- not equal<>
select
* 
from customers
where age is not null

--coalesce
--limit,offset
select
* 
from customers
limit 5 offset 2


select
* 
from customers
limit 5 offset 5*2



--like/ilike
--like casw sensitive
--ilike is case insensitive

select
* 
from customers
where full_name like('A%');

select
* 
from customers
where email ilike('%gmail%');

