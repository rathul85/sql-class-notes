CREATE TABLE customers (
customer_id INT PRIMARY KEY,
full_name VARCHAR(100),
email VARCHAR(100),
country VARCHAR(50),
city VARCHAR(50),
age INT,
total_orders INT,
total_spent DECIMAL(10,2),
last_order_date DATE,
status VARCHAR(20),
referral_id INT
);
select * from  public."customers"
